{
  "homepage": "https://github.com/fransek/package-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fransek/package-template"
  },
  "bugs": {
    "url": "https://github.com/fransek/package-template/issues"
  },
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui --coverage",
    "coverage": "vitest --run --coverage --passWithNoTests",
    "lint": "eslint",
    "prepare": "husky",
    "ci:publish": "pnpm publish --provenance --access public -r"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rollup": "^4.46.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "bash -c tsc --noEmit"
    ]
  }
}
